{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ES2020",
    "target": "es2021",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@config": ["./util/Config.ts"],
      "@/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
    ]
  }
}
